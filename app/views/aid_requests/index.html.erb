<%- model_class = AidRequest -%>
<div class="container">
<div class="page-header">
  <h1>Aid Requests</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:nric) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @aid_requests.each do |aid_request| %>
      <tr>
        <td><%= link_to aid_request.id, aid_request_path(aid_request) %></td>
        <td><%= aid_request.name %></td>
        <td><%= aid_request.phone %></td>
        <td><%= aid_request.nric %></td>
        <td><%= aid_request.content %></td>
        <td><%= aid_request.location_id %></td>
        <td><%=l aid_request.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_aid_request_path(aid_request), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      aid_request_path(aid_request),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_aid_request_path,
            :class => 'btn btn-primary' %>
    </div>
   
