<div class="container">
    <h3>2015 Flood Locations</h3>
    <div class="row">
        <%- 
            lvl = {
                1 => "panel-danger",
                5 => "panel-danger",
                10 => "panel-warning",
                20 => "panel-warning",
                50 => "panel-info",
            } 
        -%>
        <%- @locations.each do |location| -%>
            <div class="col-md-3">
                <div class="panel <%= lvl[location.seq] || "panel-info" -%>">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= location.township %> <span style="font-size:0.8em;">(<%= location.state%>) </span></h3>
                </div>
                <div class="panel-body">
                <div>
                    <label>Population</label>&nbsp;<span class="label label-primary"><%= number_to_human(location.demographic["total_male"] + location.demographic["total_female"]) %></span></label>&nbsp;
                    <!-- <label>Total Requests</label>&#38;nbsp;<span class="badge"><%= location.aid_requests.length %></span></label>&#38;nbsp; -->
                    <!-- <label>Total Offers</label>&#38;nbsp;<span class="badge"><%= location.aid_offers.length %></span></label> -->
                </div>
                <br/>
                    <div class="text-right">
                        <a href="#" class="btn btn-default btn-xs" title="Map of <%= location.township%>">
                            <span class="glyphicon glyphicon-map-marker"></span> 
                        </a>
                        <a href="/+/<%= location.township%>" class="btn btn-default btn-xs">Details</a> 
                     </div>
                </div>
            </div>
        </div>
    <%- end -%>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Latest Aid Requests</h4>
            <%- @requests.each do |req| -%>
            <div class="panel panel-default">
                <div class="panel-body">
                    req.content
                </div>
            </div>
            <%- end -%>
        </div>
        <div class="col-md-6">
            <h4>Latest Aid Offers</h4>
            <%- @offers.each do |offer| -%>
            <div class="panel panel-default">
                <div class="panel-body">
                   offer.content 
                </div>
            </div>
            <%- end -%>
        </div>
    </div>
</div>
